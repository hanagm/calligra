 #include <kactionmenu.h>
 #include <kstandardaction.h>
 #include <ksharedconfig.h>
@@ -2900,6 +2902,7 @@ void TextTool::runUrl(KoPointerEvent *event, QString &url)
         QMimeDatabase db;
         QString type = db.mimeTypeForUrl(_url).name();
 
+#ifdef HAVE_KRUN
         if (KRun::isExecutableFile(_url, type)) {
             QString question = i18n("This link points to the program or script '%1'.\n"
                                     "Malicious programs can harm your computer. "
@@ -2910,10 +2913,13 @@ void TextTool::runUrl(KoPointerEvent *event, QString &url)
             if (choice != KMessageBox::Yes)
                 return;
         }
+#endif
     }
 
     event->accept();
+#ifdef HAVE_KRUN
     new KRun(_url, 0);
+#endif
 }
 
